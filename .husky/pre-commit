#!/bin/sh

# Change to the React project directory and run lint
cd "$(dirname "$0")/../gameshow/web/reactweb" && npm run lint

# Get the list of staged files in the React project
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep "^gameshow/web/reactweb/")

# If there are no staged files in the React project, exit successfully
if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

# Run the linter
echo "üîç Running ESLint on staged files..."

# If linting failed, prevent the commit
if [ $? -ne 0 ]; then
    echo "‚ùå ESLint found issues. Please fix them and try committing again."
    exit 1
fi

echo "‚úÖ ESLint check passed!" 